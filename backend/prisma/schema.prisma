generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  nombre String
  princesscoin Decimal @default(0)
  edad Int
  cantidad_de_princesas Int @default(0)
  princesa_fav String
  dinero_por_click Int @default(0)
  imagen String

  princesas usuarios_princesas[]
  principes usuarios_principes[]
  villanos usuarios_villanos[]
}

model Princesa {
  id Int @id @default(autoincrement())
  nombre String
  cuento String
  virtud String
  habilidad Int
  principe String
  precio Int
  imagen String

  usuarios usuarios_princesas[]
  villanos princesas_villanos[]
  principes princesas_principes[]
}

model Villano {
  id Int @id @default(autoincrement())
  nombre String
  nivel_de_maldad Int
  tiene_magia Boolean
  alias String
  debilidad String
  precio Int
  imagen String

  princesas princesas_villanos[]
  usuarios usuarios_villanos[]
}

model Principe {
  id Int @id @default(autoincrement())
  nombre String
  cuento String
  virtud String
  habilidad String
  alias String
  precio Int
  imagen String

  princesas princesas_principes[]
  usuarios usuarios_principes[]
}

model usuarios_princesas{
  id Int @id @default(autoincrement())
  usuario_id Int
  princesa_id Int

  usuario Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  princesa Princesa @relation(fields: [princesa_id], references: [id], onDelete: Cascade)
}

model usuarios_principes{
  id Int @id @default(autoincrement())
  usuario_id Int
  principe_id Int

  usuario Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  principe Principe @relation(fields: [principe_id], references: [id], onDelete: Cascade)
}

model usuarios_villanos{
  id Int @id @default(autoincrement())
  usuario_id Int
  villano_id Int

  usuario Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  villano Villano @relation(fields: [villano_id], references: [id], onDelete: Cascade)
}

model princesas_villanos{
  id Int @id @default(autoincrement())
  princesa_id Int
  villano_id Int
  
  villano Villano @relation(fields: [princesa_id], references: [id], onDelete: Cascade)
  princesa Princesa @relation(fields: [villano_id], references: [id], onDelete: Cascade)
}

model princesas_principes{
  id Int @id @default(autoincrement())
  princesa_id Int
  principe_id Int
  
  princesa Princesa @relation(fields: [princesa_id], references: [id], onDelete: Cascade)
  princeso Principe @relation(fields: [principe_id], references: [id], onDelete: Cascade)
}